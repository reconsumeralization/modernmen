# Monitoring Configuration
# Copy this file to .env.local and configure your monitoring services

# ========================================
# SENTRY ERROR TRACKING & PERFORMANCE
# ========================================
# Get your DSN from https://sentry.io/settings/projects/[project]/keys/
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Sentry environment (production, staging, development)
NEXT_PUBLIC_SENTRY_ENVIRONMENT=production

# ========================================
# LOGROCKET SESSION RECORDING
# ========================================
# Get your app ID from https://app.logrocket.com/
NEXT_PUBLIC_LOGROCKET_APP_ID=your-logrocket-app-id

# ========================================
# MONITORING CONFIGURATION
# ========================================
# Enable/disable analytics tracking
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Enable/disable performance tracking
NEXT_PUBLIC_ENABLE_PERFORMANCE_TRACKING=true

# Enable/disable error tracking
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=true

# ========================================
# DEVELOPMENT SETTINGS
# ========================================
# Reduce monitoring overhead in development
NODE_ENV=development

# Only send errors to monitoring in production
# In development, errors will only be logged to console
