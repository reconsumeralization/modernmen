# ===============================
# PAYLOAD CMS WHITELABEL CONFIG
# ===============================

# Core Payload Configuration
PAYLOAD_SECRET=your-secret-key-here
PAYLOAD_PUBLIC_SERVER_URL=http://localhost:3001
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/business-cms
DATABASE_URI=mongodb://localhost:27017/business-cms
DB_NAME=business-cms

# ===============================
# WHITELABEL BRANDING SYSTEM
# ===============================

# Business Information
BRAND_NAME=Your Business Name
DEFAULT_BUSINESS_NAME=Your Business Name
DEFAULT_BUSINESS_TAGLINE=Professional services for discerning clients
DEFAULT_META_DESCRIPTION=Experience professional services at our business location. Quality service and customer satisfaction guaranteed.
DEFAULT_KEYWORDS=professional services, quality, business, local

# Business Hours
DEFAULT_OPEN_TIME=09:00
DEFAULT_CLOSE_TIME=17:00

# Environment (affects admin UI colors)
NODE_ENV=development
ENVIRONMENT=development  # Options: development, staging, production

# Brand Theme (affects admin UI styling)
BRAND_THEME=modernmen    # Options: modernmen, generic, custom

