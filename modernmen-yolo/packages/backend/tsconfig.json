{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["../frontend/src/*"],
      "@/types/*": ["../frontend/src/types/*"],
      "@/lib/*": ["../frontend/src/lib/*"],
      "@/services/*": ["./src/services/*"],
      "@/constants": ["../frontend/src/constants/index"],
      "@/constants/*": ["../frontend/src/constants/*"],
      "@/data/*": ["../frontend/src/data/*"],
      "@/hooks/*": ["../frontend/src/hooks/*"],
      "@/config/*": ["../frontend/src/config/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
