{
  "name": "@modernmen/auth",
  "version": "1.0.0",
  "private": true,
  "description": "Authentication and authorization module for Modern Men Hair Salon",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
