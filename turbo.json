{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "build/**"],
      "env": [
        "NODE_ENV",
        "NEXT_PUBLIC_*",
        "DATABASE_URL",
        "PAYLOAD_SECRET",
        "NEXTAUTH_SECRET",
        "NEXTAUTH_URL"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "NODE_ENV",
        "NEXT_PUBLIC_*",
        "DATABASE_URL",
        "PAYLOAD_SECRET",
        "NEXTAUTH_SECRET",
        "NEXTAUTH_URL"
      ]
    },
    "lint": {
      "outputs": []
    },
    "lint:fix": {
      "outputs": []
    },
    "test": {
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "__tests__/**"]
    },
    "test:unit": {
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "__tests__/**"]
    },
    "test:integration": {
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "__tests__/**"]
    },
    "test:e2e": {
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "__tests__/**"]
    },
    "type-check": {
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "deploy": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "deploy:vercel": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "db:migrate": {
      "outputs": []
    },
    "db:seed": {
      "outputs": []
    },
    "auth:setup": {
      "outputs": []
    },
    "infra:setup": {
      "outputs": []
    }
  },
  "globalDependencies": [
    "package.json",
    "turbo.json",
    "tsconfig.json"
  ]
}