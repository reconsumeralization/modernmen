export const migrateCustomers: Migration = {
  up: async (migration) => {
    await migration.addField({
      collection: 'customers',
      field: {
        name: 'marketingConsent',
        type: 'checkbox',
        defaultValue: false
      }
    })
  },
  down: async (migration) => {
    await migration.removeField({
