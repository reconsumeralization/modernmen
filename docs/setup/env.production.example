# Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# Application Configuration
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1
NEXT_PUBLIC_APP_URL=https://yourdomain.com
NEXTAUTH_URL=https://yourdomain.com
NEXTAUTH_SECRET=your-secure-random-secret-here

# Database Configuration
DATABASE_URL=postgresql://user:password@postgres:5432/modernmen_prod
POSTGRES_USER=modernmen_user
POSTGRES_PASSWORD=your-secure-database-password

# Payload CMS Configuration
PAYLOAD_SECRET=your-secure-payload-secret
PAYLOAD_PUBLIC_SERVER_URL=https://yourdomain.com

# Redis Configuration
REDIS_URL=redis://redis:6379

# Stripe Payment Configuration
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=your-email@gmail.com

# AI Services Configuration
OPENAI_API_KEY=sk-your-openai-api-key
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# Authentication Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# File Upload Configuration
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Monitoring Configuration
GRAFANA_ADMIN_PASSWORD=your-secure-grafana-password

# Security Configuration
JWT_SECRET=your-secure-jwt-secret
ENCRYPTION_KEY=your-32-character-encryption-key

# Rate Limiting Configuration
UPSTASH_REDIS_REST_URL=https://your-upstash-redis-url
UPSTASH_REDIS_REST_TOKEN=your-upstash-redis-token

# Analytics Configuration
VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# Redis Commander (Development/Production Admin)
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=your-secure-redis-commander-password

# Docker Configuration
COMPOSE_PROJECT_NAME=modernmen-prod
DOCKER_BUILDKIT=1

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Performance Configuration
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_CHUNK_SIZE=1048576

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000000000

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# Monitoring Alerts
ALERT_EMAIL=alerts@yourdomain.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook

# SSL/TLS Configuration (if using Let's Encrypt)
SSL_EMAIL=ssl@yourdomain.com
SSL_DOMAINS=yourdomain.com,www.yourdomain.com

# CDN Configuration (if using Cloudflare or similar)
CDN_URL=https://cdn.yourdomain.com
CDN_PURGE_TOKEN=your-cdn-purge-token
