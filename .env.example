# Modern Men Hair BarberShop - Environment Variables
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Next.js Application URL (used for redirects, webhooks, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Payload CMS Configuration
PAYLOAD_SECRET=your-payload-secret-here
PAYLOAD_PUBLIC_SERVER_URL=http://localhost:3000

# NextAuth.js Configuration
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite Database (Primary database for this application)
DATABASE_URL=file:./dev.db
DATABASE_URI=file:./dev.db

# PostgreSQL (Alternative - only if switching from SQLite)
# DATABASE_URL=postgresql://username:password@localhost:5432/modernen_dev
# POSTGRES_URL=postgresql://username:password@localhost:5432/modernen_dev

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# Admin Account (for initial setup)
ADMIN_EMAIL=admin@modernmen.ca
ADMIN_PASSWORD=your-admin-password-here

# JWT Token for API testing
NEXT_PUBLIC_TEST_JWT_TOKEN=your-jwt-token-here

# Webhook Secret for Payload CMS
PAYLOAD_WEBHOOK_SECRET=dev-webhook-secret

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Redis Configuration (Optional - for caching and sessions)
REDIS_URL=redis://localhost:6379

# Upstash Redis (Alternative to local Redis)
# UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
# UPSTASH_REDIS_REST_TOKEN=your-redis-token

# Supabase (Optional - for additional features)
# NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Cloudflare (Optional - for CDN and domain management)
# CLOUDFLARE_ZONE_ID=your-zone-id
# CLOUDFLARE_API_TOKEN=your-api-token

# CDN Provider (Optional)
# CDN_PROVIDER=cloudflare

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API URLs (for external services)
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXT_PUBLIC_PAYLOAD_URL=http://localhost:3000

# OG Image Generation (Optional)
# OG_IMAGE_API_URL=https://api.og-image.com
# OG_IMAGE_API_KEY=your-og-image-api-key

# =============================================================================
# DEVELOPMENT & PRODUCTION FLAGS
# =============================================================================

# Node Environment
NODE_ENV=development

# Disable Next.js telemetry in production
NEXT_TELEMETRY_DISABLED=1

# =============================================================================
# SEEDING & DEVELOPMENT
# =============================================================================

# Seed API Key (for development data seeding)
SEED_API_KEY=your-seed-api-key-here

# =============================================================================
# SOCIAL MEDIA & INTEGRATIONS
# =============================================================================

# SMS Service (Optional)
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token
# TWILIO_PHONE_NUMBER=your-twilio-phone-number

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Error monitoring (Optional)
# SENTRY_DSN=your-sentry-dsn

# Analytics (Optional)
# GOOGLE_ANALYTICS_ID=your-ga-id
# MIXPANEL_TOKEN=your-mixpanel-token

# =============================================================================
# FILE STORAGE & MEDIA
# =============================================================================

# Media storage configuration (Optional - defaults to local)
# AWS_S3_BUCKET=your-s3-bucket
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1

# Bunny CDN (Optional - alternative to Cloudflare)
# BUNNY_STORAGE_API_KEY=your-bunny-api-key
# BUNNY_STORAGE_ZONE_NAME=your-storage-zone
# BUNNY_PULL_ZONE_URL=https://your-pull-zone.b-cdn.net

# =============================================================================
# DEPLOYMENT SPECIFIC
# =============================================================================

# Vercel deployment (automatically set by Vercel)
# VERCEL_URL=your-vercel-deployment-url

# Build configuration
# NEXT_PUBLIC_SERVER_URL=https://your-production-domain.com
