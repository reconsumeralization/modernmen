{
  "name": "@modernmen/tests",
  "version": "1.0.0",
  "description": "Modern Men Hair Salon - Test Suite",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageDirectory=coverage",
    "test:ci": "npm run test:unit && npm run test:integration",
    "lint": "eslint __tests__/**/*.ts",
    "lint:fix": "eslint __tests__/**/*.ts --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@modernmen/frontend": "workspace:*",
    "@modernmen/backend": "workspace:*",
    "@modernmen/auth": "workspace:*",
    "@modernmen/db": "workspace:*",
    "@modernmen/utils": "workspace:*",
    "jest": "^29.7.0",
    "@jest/globals": "^29.7.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/user-event": "^14.5.1",
    "supertest": "^6.3.3",
    "playwright": "^1.39.0",
    "@playwright/test": "^1.39.0",
    "cypress": "^13.0.0",
    "msw": "^1.3.0",
    "nock": "^13.4.0",
    "@faker-js/faker": "^8.2.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "typescript": "^5.2.2",
    "tsx": "^4.0.0",
    "eslint": "^8.50.0",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
